@model List<Movie>
@{
    ViewData["Title"] = "Index";
}

<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>MovieId</th>
                <th>Title</th>
                <th>Actor</th>
                <th>language</th>
                <th>Director</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model){
                <tr>
                    <td>@item.MovieId</td>
                    <td>@item.Title</td>
                    <td>@item.Actor</td>
                    <td>@item.language</td>
                    <td>@item.Director</td>
                    <td>
                        <a href="Movie/Detail?Title=@item.Title">Movie Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a asp-action="Create">Add Movie</a>

